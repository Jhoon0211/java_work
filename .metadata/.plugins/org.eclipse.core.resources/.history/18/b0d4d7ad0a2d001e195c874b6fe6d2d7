package oops_p;

public class Exam {
	
	// 멤버변수
	String name, grade; // 이름, 등급
	int [] jum; // 점수
	int tot, avg, rank; // 총합, 평균, 순위
	
	// 시험 메서드
	public Exam(String name, String ... jum) {
		super();
		this.name = name;
		this.jum = new int [jum.length];
		
		for (int i=0; i <jum.length; i++) {
			this.jum[i] = Integer.parseInt(jum[i]);
		}
	}
	
	void calc() {
		tot = 0;
		for(int i : jum) {
			tot += i;
		}
		
		avg = tot/jum.length;
		
		grade = "가가가가가가양미우수수".charAt(avg/10)+"";
	}
	
	void rankCalc(Exam [] exArr) {
		rank = 1;
		for(Exam you : exArr) {
			if(avg < you.avg) {
				rank++;
			}
		}
	}
}
